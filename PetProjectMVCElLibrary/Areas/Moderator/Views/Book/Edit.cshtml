@model BookViewModel
@{
    string strTitle = "Редактировать запись";
    ViewBag.Title = strTitle;
}
<script src="~/js/ckeditor/ckeditor.js"></script>
<div>
    <h2>@TempData["Message"]</h2>
    <h2>@strTitle</h2>
    <div>
        <form asp-area="Moderator" asp-controller="Book" asp-action="Edit" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id">
            <input type="hidden" asp-for="DateAdded">
            <input type="hidden" asp-for="TitleImagePath">

            <div class="div-box">
                <label asp-for="Title"></label>
                <input asp-for="Title">
                <span asp-validation-for="Title" class="Alert"></span>
            </div>
            <div class="div-box">
                <label asp-for="SubTitle"></label>
                <input asp-for="SubTitle">
                <span asp-validation-for="SubTitle" class="Alert"></span>
            </div>
            <div class="div-box">
                <label asp-for="Text"></label>
                <textarea asp-for="Text"></textarea>
                <span asp-validation-for="Text" class="Alert"></span>
            </div>
            <div class="div-box">
                <label asp-for="AuthorName"></label>
                <input asp-for="AuthorName">
            </div>
            <div class="div-box">
                <label asp-for="GenreName"></label>
                <input asp-for="GenreName">
            </div>
            <div class="div-box">
                <label asp-for="TitleImagePath"></label>
                <input type="file" name="titleImageFile" id="titleImageFile">
                <div>
                    <img class="img-block" src="~/images/@Model.TitleImagePath">
                </div>
                <span asp-validation-for="TitleImagePath" class="Alert"></span>
            </div>
            <div class="div-box">
                <input hidden asp-for="IsBooking">
                <span hidden asp-validation-for="IsBooking"></span>
            </div>
            <input type="submit" class="glo" value="Сохранить">
        </form>
    </div>
</div>

<script>
    window.onload = function () {
        var newCKEdit = CKEDITOR.replace('@Html.IdFor(x => x.Text)');
        newCKEdit.updateElement();
    }
</script>